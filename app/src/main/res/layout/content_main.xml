<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="@dimen/grid_view_vertical_spacing"
        android:horizontalSpacing="@dimen/grid_view_horizontal_spacing"
        android:stretchMode="columnWidth"
        android:numColumns="2"
        />

    <ImageButton
        android:id="@+id/drawerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/button_drawer_margin_left"
        android:layout_marginTop="@dimen/button_drawer_margin_top"
        android:paddingRight="@dimen/menu_button_padding"
        android:paddingBottom="@dimen/menu_button_padding"/>

</RelativeLayout>